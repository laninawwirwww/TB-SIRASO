<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ringkasan Pembayaran</title>
    <link href="/stylesheets/style1.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">

    <!-- Navbar -->
    <nav class="bg-green-500 p-4">
        <div class="container mx-auto text-white flex justify-between">
            <a href="/" class="text-lg font-semibold">Pemesanan Makanan di Bussiness Center UNAND</a>
            <div class="flex">
                <a href="/" class="mx-2">Home</a>
                <a href="/about" class="mx-2">About</a>
                <a href="/pesanan" class="mx-2">Pesanan saya</a>
            </div>
        </div>
    </nav>

    <!-- Ringkasan Pembayaran -->
    <div class="max-w-lg mx-auto mt-10 p-6 bg-white shadow-lg rounded-md">
        <h2 class="text-2xl font-semibold text-center text-gray-700 mb-6">Ringkasan Pembayaran</h2>

        <!-- Ringkasan Pesanan -->
        <div class="mb-6">
            <h3 class="text-xl font-medium text-gray-700 mb-4">Pesanan Anda:</h3>
            <table class="min-w-full border-collapse">
                <thead>
                    <tr>
                        <th class="border-b p-2">Nama Barang</th>
                        <th class="border-b p-2">Jumlah</th>
                        <th class="border-b p-2">Harga</th>
                    </tr>
                </thead>
                <tbody>
                    <% pesanan.forEach(item => { %>
                        <tr>
                            <td class="border-b p-2"><%= item.name %></td>
                            <td class="border-b p-2"><%= item.quantity %></td>
                            <td class="border-b p-2">Rp <%= item.price * item.quantity %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <!-- Kode Diskon -->
        <div class="mb-6">
            <p class="font-medium text-gray-700">Kode Diskon:</p>
            <p class="text-green-600"><%= kodeDiskon ? kodeDiskon : 'Tidak ada kode diskon' %></p>
        </div>

        <!-- Metode Pembayaran -->
        <div class="mb-6">
            <p class="font-medium text-gray-700">Metode Pembayaran:</p>
            <p class="text-green-600"><%= metodePembayaran %></p>
        </div>

        <!-- Total Pembayaran -->
        <div class="mb-6">
            <h3 class="font-semibold text-xl text-gray-700">Total Pembayaran: Rp <%= totalPembayaran %></h3>
        </div>

       <!-- Tombol Bayar -->
        <form action="/Bayar" method="POST"></form>
        <input type="hidden" name="metodePembayaran" value="<%= metodePembayaran %>">
        
        <div class="flex justify-between">
            <a href="/Bayar" class="px-4 py-2 text-white bg-red-500 rounded-md">Kembali</a>
            <button type="submit" class="px-4 py-2 text-white bg-green-500 rounded-md">Bayar</button>
        </form>
        </div>
    </div>


    </div>

</body>
<script src="/bayar.js"></script>

</html>
