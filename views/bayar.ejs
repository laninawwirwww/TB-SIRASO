<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Pemesanan Makanan di Bussiness Center UNAND</title>
    <link href="/stylesheets/style1.css" rel="stylesheet" />
</head>
<body class="bg-gray-100 font-sans">

    <!-- Navbar -->
    <nav class="bg-green-500 p-4">
        <div class="container mx-auto text-white flex justify-between">
            <a href="/" class="text-lg font-semibold">Pemesanan Makanan di Bussiness Center UNAND</a>
            <div class="flex">
                <a href="/" class="mx-2">Home</a>
                <a href="/about" class="mx-2">About</a>
                <a href="/pesanan" class="mx-2">Pesanan saya</a>
            </div>
        </div>
    </nav>

    <!-- Form Pembayaran -->
    <div class="max-w-lg mx-auto mt-10 p-6 bg-white shadow-lg rounded-md">
        <h2 class="text-2xl font-semibold text-center text-gray-700 mb-6">Pembayaran</h2>
        
        <form id="formPembayaran" action="/selanjutnya" method="POST">
            <!-- Kode Diskon -->
            <div class="mb-6">
                <label for="kodeDiskon" class="block text-sm font-medium text-gray-700">Kode Diskon</label>
                <input type="text" id="kodeDiskon" name="kodeDiskon" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-green-500" placeholder="Masukkan kode diskon" />
                <button type="button" id="terapkanBtn" class="mt-2 bg-green-500 text-white px-4 py-2 rounded-md">Terapkan</button>
                <br>
                <span id="diskonMessage" class="text-green-600 mt-1"></span>
            </div>

            <!-- Metode Pembayaran -->
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700">Metode Pembayaran</label>
                <div class="flex items-center mt-2">
                    <input type="radio" id="transfer" name="metodePembayaran" value="Transfer" class="mr-2" />
                    <label for="transfer" class="text-sm">Transfer (BNI : 2345678992)</label>
                </div>
                <div class="flex items-center mt-2">
                    <input type="radio" id="bayarDitempat" name="metodePembayaran" value="Bayar ditempat" class="mr-2" />
                    <label for="bayarDitempat" class="text-sm">Bayar ditempat</label>
                </div>
            </div>

            <!-- Tombol -->
            <div class="flex justify-between">
                <button type="reset" id="batalBtn" class="px-4 py-2 text-white bg-red-500 rounded-md">Batal</button>
                <button type="submit" id="selanjutnyaBtn" class="px-4 py-2 text-white bg-green-500 rounded-md" disabled>Selanjutnya</button>
            </div>
        </form>
    </div>
    
    <script src="/index.js"></script>
</body>
<script src="/bayar.js"></script>


</html>
